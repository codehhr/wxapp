/* 可视区域 */
.body {
  background-color: #fdebc3;
  width: 100%;
  min-height: 100vh;
}

/* title */
.title {
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fdebc3;
  box-shadow: 0 2px 4px #ffa551;
  text-align: center;
  font-size: 2rem;
  font-weight: 800;
  color: #e97d4c;
  z-index: 10;
}

.recordlist {
  position: relative;
  top: 84rpx;
  width: 90%;
  min-height: 100vh;
  margin: 0 auto;
}

.recorditem {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: inherit;
  height: 100rpx;
  background-color: #eed089;
  margin: 4rpx auto;
  border-radius: 8px;
}